                data-name="E-Notes"
                data-description="Notes for web development"
                data-image="/img/marketplace.png"
                data-locale="auto">
            </script>
            <script>
                document.getElementsByClassName("stripe-button-el")[0].hidden = true;
            </script>
                <button type="submit" class="btn btn-outline-dark text-blue btn-lg center pay-button"><i class="fab fa-stripe"></i> Purchase it for 10$</button>

        </form>
        <form action="/pay" method="POST">
            <button type="submit" class="btn btn-outline-dark text-blue btn-lg center pay-button"><i class="fab fa-cc-paypal"></i> Purchase it for 10$</button>
        </form>
        <form action="/paytm" method="POST">
            <button type="submit" class="btn btn-outline-dark text-blue btn-lg center pay-button"><img src="./img/paytm_icon.png" alt=""> Purchase it for 10$</button>
        </form>
    </div>
